<div class="ec-wholePage">
  <div class="ec-pageHeader">
    <h2 class="title">お問い合わせ</h2>
  </div>

  <div class="ec-formBody">
    <%= form_with model: @contact, url: contact_confirm_path(@contact), local: true, data: { turbo: false }, html: { class: "entry-form" } do |f| %>  
      <div class="valid-error-mssg"> 
        <%= render "shared/error_messages", resource: @contact %>
      </div>
      <div class="ec-borderedDefs">
        <dl class="element">
          <dt class="element-label">
            <%= f.label :name, 'お名前', class: "control-label" %>
            <span class="ec-required">必須</span>
          </dt>
          <dd class="element-form">
            <div class="ec-field">
              <%= f.text_field :name, placeholder: "例：山田太郎", class: "form-control w90" %>
            </div>
          </dd>
        </dl>

        <dl class="element">
          <dt class="element-label">
            <%= f.label :name_kana, 'お名前(カナ)', class: "control-label" %>
          </dt>
          <dd class="element-form">
            <div class="ec-field">
              <%= f.text_field :name_kana, placeholder: "例：ヤマダタロウ", class: "form-control w90"  %>
            </div>
          </dd>
        </dl>

        <dl class="element">
          <dt class="element-label">
            <%= f.label :postal_code, '住所', class: "control-label" %>
          </dt>
          <dd class="element-form">
            <div class="ec-zipInput">
              <span class="post-mark">〒</span>
              <%= f.text_field :postal_code, placeholder: "例：1234567", class: "form-control w-150px", id: "user_postal_code" %>
            </div>
            <div class="ec-select">
              <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, { prompt: '都道府県を選択'}, class: "form-select prefecture w-180px", id: "user_prefecture_code"  %>
            </div>
            <div class="ec-field">
              <%= f.text_field :city, placeholder: "市区町村(例：東京都港区)", class: "form-control w90", id: "user_city" %>
            </div>
            <div class="ec-field">
              <%= f.text_field :street_and_others, placeholder: "番地・ビル名(例：〇〇1丁目23-4)",class: "form-control w90", id: "user_street_and_otherts" %>
            </div>
          </dd> 
        </dl>

        <dl class="element">
          <dt class="element-label">
            <%= f.label :email, 'メールアドレス', class: "control-label" %>
            <span class="ec-required">必須</span>
          </dt>
          <dd class="element-form">
            <div class="ec-field">
              <%= f.email_field :email, placeholder: "例：abc@example.com", autocomplete: "email", class: "form-control w90" %>
            </div>
          </dd>
        </dl>

        <dl class="element">
          <dt class="element-label">
            <%= f.label :tel, '電話番号', class: "control-label" %>
          </dt>
          <dd class="element-form">
            <div class="ec-telInput">
              <%= f.text_field :tel, placeholder: "例：08012345678", class: "form-control w90" %>
            </div>
          </dd>
        </dl>

        <dl class="element">
          <dt class="element-label">
            <%= f.label :tel, 'タイトル', class: "control-label" %>
            <span class="ec-required">必須</span>
          </dt>
          <dd class="element-form">
            <div class="ec-telInput">
              <%= f.text_field :subject, class: "form-control w90" %>
            </div>
          </dd>
        </dl>

        <dl class="element message-element">
          <dt class="element-label">
            <%= f.label :message, 'お問い合わせ内容', class: "control-label" %>
            <span class="ec-required">必須</span>
          </dt>
          <dd class="element-form">
            <div class="ec-telInput">
              <%= f.text_area :message, class: "form-control w90 h200" %>
            </div>
          </dd>
        </dl>

      </div>
      <div class="form-group actions">
        <%= f.submit "確認する", class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
