<div class="ec-register">
  <div class="ec-pageHeader">
    <h2 class="title">新規会員登録確認</h2>
  </div>

  <div class="ec-formBody">
    <div class="ec-borderedDefs">
      <dl>
        <dt>
          <label class="control-label">お名前</label>
          <span class="ec-required">必須</span>
        </dt>
        <dd>
          <div class="output">
            <%= @user.username %>
          </div>
        </dd>
      </dl>

      <dl>
        <dt>
          <label class="control-label">お名前(カナ)</label>
        </dt>
        <dd>
          <div class="output">
            <%= @user.username_kana %>
          </div>
        </dd>
      </dl>

      <dl>
        <dt>
          <label class="control-label">住所</label>
          <span class="ec-required">必須</span>
        </dt>
        <dd>
          <div class="output">
            〒<%= @user.postal_code %><br /><%= @user.prefecture_code %><br /><%= @user.city %><br /><%= @user.street_and_others %>
          </div>
        </dd>
      </dl>
      
      <dl>
        <dt>
          <label class="control-label">電話番号</label>
          <span class="ec-required">必須</span>
        </dt>
        <dd>
          <div class="output">
            <%= @user.tel %>
          </div>
        </dd>
      </dl>

      <dl>
        <dt>
          <label class="control-label">メールアドレス</label>
          <span class="ec-required">必須</span>
        </dt>
        <dd>
          <div class="output">
            <%= @user.email %>
          </div>
        </dd>
      </dl>
      
       <dl>
        <dt>
          <label class="control-label">パスワード</label>
          <span class="ec-required">必須</span>
        </dt>
        <dd>
          <div class="output">
            <%= "*" * @user.password.length %><br /><%= "*" * @user.password_confirmation.length %>
          </div>
        </dd>
      </dl>

      <dl>
        <dt>
          <label class="control-label">生年月日</label>
        </dt>
        <dd>
          <div class="output">
            <%= @user.birthday %>
          </div>
        </dd>
      </dl>
      
      <dl>
        <dt>
          <label class="control-label">性別</label>
        </dt>
        <dd>
          <div class="output">
            <%= @user.sex %>
          </div>
        </dd>
      </dl>
      
      <dl class="job">
        <dt>
          <label class="control-label">職業</label>
        </dt>
        <dd>
          <div class="output">
            <%= @user.job %>
          </div>
        </dd>
      </dl>
    </div>

    <%# <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false }, html: { id: 'registration-form' } ) do |f| %> 
    <%= form_with model: @user, url: sign_up_complete_path, local: true, data: { turbo: false } do |f| %>
    <%# <%= form_for(resource, as: resource_name, url: sign_up_complete_path(resource_name)) do |f| %> 
      <%= f.hidden_field :username %>
      <%= f.hidden_field :username_kana %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :prefecture_code %>
      <%= f.hidden_field :city %>
      <%= f.hidden_field :street_and_others %>
      <%= f.hidden_field :tel %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :password %>
      <%= f.hidden_field :password_confirmation %>
      <%= f.hidden_field :birthday %>
      <%= f.hidden_field :sex %>
      <%= f.hidden_field :job %>
      <%= f.hidden_field :agreement %>

      <div class="ec-buttuons">
        <div class="form-group actions">
          <%= f.submit "登録する", class: "btn btn-danger" %>
        </div>
        <div class="form-group actions">
          <%= f.submit "戻る", name: :back, class: "btn btn-secondary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>