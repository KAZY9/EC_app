<h2>新規会員登録</h2>

<%= form_with model: @user, url: users_sign_up_confirm_path(@user), local: true, data: { turbo: false } do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username, 'お名前' %><span>※必須</span><br />
    <%= f.text_field :username, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :username_kana, 'お名前(カナ)' %><br />
    <%= f.text_field :username_kana %>
  </div>

  <div class="field">
    <%= f.label :address, '住所' %><span>※必須</span><br />
    〒<%= f.text_field :postal_code %><br />
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, { prompt: '都道府県を選択'}   %><br />
    <%= f.text_field :city %><br />
    <%= f.text_field :street_and_others %>
  </div>

  <div class="field">
    <%= f.label :tel, '電話番号' %><span>※必須</span><br />
    <%= f.text_field :tel %>
  </div>

   <div class="field">
    <%= f.label :email, 'メールアドレス' %><span>※必須</span><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %><span>※必須</span><br />
    <%= f.password_field :password, autocomplete: "new-password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :birthday, '生年月日' %><br />
    <%= f.date_select :birthday, include_blank: true, use_month_numbers: true, start_year: Time.now.year, end_year: 1913, default: nil, date_separator:' / '%>
  </div>

  <div class="field">
    <%= f.label :sex, '性別' %><br />
    <%= f.radio_button :sex, '男性' %>
    <%= f.label :sex, '男性' %>

    <%= f.radio_button :sex, '女性' %>
    <%= f.label :sex, '女性' %>
  </div>

  <div class="field">
    <%= f.label :job, '職業' %><br />
    <%= f.select :job, JOB_LIST, { prompt: '選択してください'} %>
  </div>

  <div class="actions">
    <%= f.submit "確認する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
